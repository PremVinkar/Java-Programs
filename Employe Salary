import java.util.Scanner;
class Employee1 {
int id;
long mobile_no;
String name, mail_id, address;
Scanner sc = new Scanner(System.in);
void getdata(){
System.out.println("Enter id of Employee");
id = sc.nextInt();
System.out.println("Enter mobile no of Employee");
mobile_no = sc.nextLong();
System.out.println("Enter name of Employee");
name = sc.next();
System.out.println("Enter mail id of Employee");
mail_id = sc.next();
System.out.println("Enter address of Employee");
address = sc.next();
}
void display(){
System.out.println("Enter id of Employee"+id);
System.out.println("Enter mobile number of Employee"+mobile_no);
System.out.println("Enter name of Employee "+name);
System.out.println("Enter mail id of Employee"+mail_id);
System.out.println("Enter address of Employee"+address);
}}
class programmer extends Employee1{
double gross_salary;
double net_salary;
double bp,hra,clubfees,pf,da;
void programmer(){
System.out.println("Enter salary of programmer");
bp = sc.nextDouble();
da = (0.97 * bp);
hra = (0.10 * bp);
pf = (0.12 * bp);
clubfees = (0.001 * bp);
gross_salary = (bp+da+hra);
net_salary = (gross_salary -(pf + clubfees));
System.out.println("Gross salary :"+gross_salary);
System.out.println("Net salary :"+net_salary);
}}
class Teamleader extends Employee1{
double gross_salary;
double net_salary;
double bp,hra,clubfees,pf,da;
void teamleader(){
System.out.println("Enter salary of teamleader");
bp = sc.nextDouble();
da = (0.97 * bp);
hra = (0.10 * bp);
pf = (0.12 * bp);
clubfees = (0.001 * bp);
gross_salary = (bp+da+hra);
net_salary = (gross_salary -(pf + clubfees));
System.out.println("Gross salary :"+gross_salary);
System.out.println("Net salary :"+net_salary);
}}
class salary{
public static void main(String args[]){
int ch;
Scanner sc = new Scanner(System.in);
System.out.println("Enter the number whose salary want to print");
System.out.println("1. prgrammer\n 2.Team leader");
ch = sc.nextInt();
switch(ch){
case 1:
programmer obj = new programmer();
obj.getdata();
obj.display();
obj.programmer();
break;

case 2:
Teamleader obj2 = new Teamleader();
obj2.getdata();
obj2.display();
obj2.teamleader();
break;
}
}
}
